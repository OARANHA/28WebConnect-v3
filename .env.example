# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Databases
# evo-ai (SQLAlchemy URL)
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@postgres:5432/evo_ai
# evolution-api (Prisma URL)
EVOLUTION_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/evolution_db

# Redis
REDIS_PORT=6379
EVOAI_REDIS_URL=redis://redis:6379/0
EVOLUTION_REDIS_URL=redis://redis:6379/1

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=evo-bucket

# Evo-AI Backend
HOST=0.0.0.0
PORT=8000
DEBUG=false
JWT_SECRET_KEY=change-me

# Evolution-API access (from evo-ai to call Evolution-API)
EVOLUTION_API_BASE_URL=http://evolution-api:8080
EVOLUTION_API_APIKEY=your-evolution-apikey

# EvoAI Agent (used by Evolution-API to call EvoAI when messages arrive)
EVOAI_AGENT_URL=http://evoai-backend:8000/api/v1/agents/chatbot
EVOAI_AGENT_APIKEY=your-evoai-agent-apikey

# Frontend
NEXT_PUBLIC_API_BASE_URL=/api
